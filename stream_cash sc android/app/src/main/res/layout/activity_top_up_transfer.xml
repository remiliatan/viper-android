<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    tools:context=".activity.topuptrans.TopUpTransferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:id="@+id/backButton"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/textIndicator"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        android:id="@+id/parentTopup"
        android:background="@drawable/btnborder2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/nominal"
                android:padding="@dimen/padding_button"
                android:inputType="number"
                android:id="@+id/topUpNominal"
                android:textSize="20sp"
                android:digits="0123456789"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/putih"
            android:text="@string/topup"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="20dp"
            android:id="@+id/tblTopup"
            android:padding="@dimen/padding_button"
            android:textAlignment="center"
            android:background="@drawable/onpressbuton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        android:id="@+id/parentTransfer"
        android:background="@drawable/btnborder2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:hint="@string/nominal"
            android:padding="@dimen/padding_button"
            android:inputType="number"
            android:textSize="20sp"
            android:id="@+id/nominalTransfer"
            android:digits="0123456789"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:hint="E-Mail Penerima"
            android:id="@+id/targetEmail"
            android:padding="@dimen/padding_button"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/putih"
            android:text="@string/transfer"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="20dp"
            android:id="@+id/tblTransfer"
            android:padding="@dimen/padding_button"
            android:textAlignment="center"
            android:background="@drawable/onpressbuton"/>

    </LinearLayout>
</LinearLayout>