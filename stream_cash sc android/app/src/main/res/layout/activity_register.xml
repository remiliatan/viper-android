<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:orientation="vertical"
    tools:context=".activity.register.RegisterActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/radius_blue"
                    android:layout_height="150dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/putih"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="@string/app_name"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/daftar_text"
                        android:layout_margin="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/half_black"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextborder"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:id="@+id/edtEmail"
                        android:drawablePadding="20dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:hint="Masukkan E-Mail kamu"
                        android:layout_marginEnd="15dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextborder"
                        android:padding="10dp"
                        android:id="@+id/edtPassword"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:drawablePadding="20dp"
                        android:hint="Password baru"
                        android:layout_marginEnd="15dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextborder"
                        android:padding="10dp"
                        android:id="@+id/edtKonfirmasi"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:drawablePadding="20dp"
                        android:hint="Konfirmasi password"
                        android:layout_marginEnd="15dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextborder"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:id="@+id/edtNickname"
                        android:drawablePadding="20dp"
                        android:digits="0123456789qwertzuiopasdfghjklyxcvbnm()-,.ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:hint="Nickname"
                        android:layout_marginEnd="15dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="@dimen/margin"
                        android:orientation="horizontal">



                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textAllCaps="true"
                        android:textColor="@color/putih"
                        android:text="@string/daftar_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/btnRegister"
                        android:padding="@dimen/padding_button"
                        android:textAlignment="center"
                        android:background="@drawable/onpressbuton"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/keLogin"
                        android:layout_gravity="center"
                        android:textColor="@color/birutext"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/login"/>

                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>