<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:orientation="vertical"
    tools:context=".activity.login.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/radius_blue"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="17sp"
                            android:textColor="@color/putih"
                            android:id="@+id/namaUser"
                            android:maxLines="1"
                            android:text="Halo, Noval"
                            android:layout_weight="0.7"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/putih"
                        android:id="@+id/balanceUser"
                        android:gravity="center"
                        android:textSize="26sp"
                        android:text="Rp.20.000"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/birutext"
                        android:text="@string/transfer"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/tblTransfer"
                        android:padding="@dimen/padding_button"
                        android:textAlignment="center"
                        android:background="@drawable/onpressbuton2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/birutext"
                        android:text="@string/topup"
                        android:textAllCaps="true"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/topUpBtn"
                        android:padding="@dimen/padding_button"
                        android:textAlignment="center"
                        android:background="@drawable/onpressbuton2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/birutext"
                        android:text="Withdraw"
                        android:textAllCaps="true"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/wdBtn"
                        android:padding="@dimen/padding_button"
                        android:textAlignment="center"
                        android:background="@drawable/onpressbuton2"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/birutext"
                        android:text="Keluar"
                        android:textAllCaps="true"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/keluar"
                        android:padding="@dimen/padding_button"
                        android:textAlignment="center"
                        android:background="@drawable/onpressbuton2"/>

                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>